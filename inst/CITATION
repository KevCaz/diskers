citHeader("To cite diskers use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{diskers}: R implementation of dispersal kernels.",
         author = c(person("Kevin", "Cazelles"),
                    person("Kevin", "Solarik")
                    ),
         year = year,
         note = note,
         url = "https://KevCaz.github.io/diskers/")
